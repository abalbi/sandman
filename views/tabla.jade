extends layout

block content
  script(src="lib/angular/angular.js")
  script(src="lib/angular/angular-route.js")
  script(src="js/app.js")
  script(src="js/services.js")
  script(src="js/controllers.js")
  script(src="js/filters.js")
  script(src="js/directives.js")
  div(ng-app="burgo")
    h1= title
    p Welcome to #{title}
    div(ng-controller="TablaCtrl")
      a(id="agregar_evento" href="#" ng-click="mostrar()") Agregar Evento
      div(id="form_agregar_evento" ng-show="mostrar_evento") 
        | fecha: 
        input(ng-model="nuevo_evento.fecha")
        | lugar:
        input(ng-model="nuevo_evento.lugar") 
        | descripcion:
        input(ng-model="nuevo_evento.descripcion")
        a(id="guardar_evento" ng-click="guardar_evento()") Guardar
         - 
        a(id="borrar_evento" ng-click="borrar_evento(nuevo_evento._id)") Borrar
      table
        thead
          tr
            td
            td(ng-repeat="lugar in lugares")
              {{lugar}}
        tbody
          tr(ng-repeat="(fecha, eventos) in tabla")
            td
              {{mostrar_fecha(fecha)}}
            td(ng-repeat="(lugar, evento) in eventos.data")
              div(ng-repeat="(key, item) in evento")
                span(ng-click="modificar_evento(fecha, lugar, item)" alt="{{item.id}}") {{item.descripcion}}


